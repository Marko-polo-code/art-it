<div class="row">

  <div class="cards col-md-8 col-sm-12">

<% @favorites.each do |favorite| %>

     <% if favorite.collection.photos.attached? %>

      <div class="card-trip">
         <%= cl_image_tag favorite.collection.photos[0].key, height: 300, width: 400, crop: :fill %>
            <div class="card-trip-infos">
              <p id="description"><%=link_to favorite.collection.title, collection_path(favorite.collection)%></p>
            <%= link_to collection_favorite_path(favorite.collection, favorite),
            method: :delete,
            data: { confirm: "This Collection will be removed from the favorites" } do %>
            <i class="fas fa-heart"></i>
            <% end %>
          <div>
            <p><%= favorite.collection.description %><p>
            <br>
            <p id="price">$<%= favorite.collection.price %></p>

          </div>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>


    <% else %>

    
      <div class="card-trip">
        <img src="https://source.unsplash.com/<%=rand(1400..1600) %>x900/?painting" />
        <div class="card-trip-infos">
          <p id="description"><%= link_to favorite.collection.title, collection_path(favorite.collection)%></p>
         <%= link_to collection_favorite_path(favorite.collection, favorite),
            method: :delete,
            data: { confirm: "This Collection will be removed from the favorites" } do %>
            <i class="fas fa-heart"></i>
         <% end %>
          <div>
          <p><%= favorite.collection.description %><p>
          <br>
          <p id="price">$<%= favorite.collection.price %></p>
          </div>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
     </div>
  <% end %>
  <% end %>
</div>

<div class="col-md-4">
    <div id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

