



    <h2 id="collection">My Collection</h2>

<div class="row">
    <% @collections.each do |my_collection| %>
   <div class="col-md-4 col-sm-12">
     <div class=card-trip>





  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% my_collection.photos.each_with_index do |photo, index| %>
        <div class="carousel-item <%= "active" if index == 0 %>">
            <div class="card-trip-infos">
          <div class="carousel-bg" style="background-image: url('<%= cl_image_path photo.key, height: 300, width: 400, crop: :fill %>')">
            </div>
            <p><%= my_collection.title %></p>
            <p><%= my_collection.description %></p>
            <p><%= my_collection.price %></p>
          </div>
        </div>
      <% end %>
      </div>
    <span><%= link_to 'delete', collection_path(my_collection), class: "btn btn-ghost", method: :delete %></span>
    <span><%= link_to 'edit', edit_collection_path(my_collection), class: "btn btn-ghost" %></span>
    </div>

        </div>
      </div>
<% end %>
  </div>






    <br>

    <h3>Bookings</h3>

  <div class="row">

      <% @made_bookings.each do |booking| %>
     <div class="col-md-4 col-sm-12">
        <div class="card-trip">

          <img src="https://source.unsplash.com/<%=rand(1400..1600) %>x900/?painting" />
          <div class="card-trip-infos">

            <p id="title-two"><%= booking.collection.title %></p>
            <p id="start">Start date:<br><%= booking.start_date %></p>
            <p id="end">End date:<br><%= booking.end_date %></p>

          </div>

          <% if booking.review.nil? %>
            <%= link_to "Review this booking", new_booking_review_path(booking), class: "btn btn-ghost"%>
          <% end %>
        </div>
    </div>
      <% end %>
  </div>





    <h3>Received Bookings</h3>

<div class="row">



        <% @received_bookings.each do |booking| %>
   <div class="col-md-4 col-sm-2">
      <div class=card-trip>

        <img src="https://source.unsplash.com/<%=rand(1400..1600) %>x900/?painting" />
      <div class="card-trip-infos">

        <p><%= booking.collection.title %></p>
        <p><%= booking.start_date %></p>
        <p><%= booking.end_date %></p>
      </div>

        <% unless booking.status == "accepted" || booking.status == "rejected" %>
        <%= link_to 'accept', booking_accept_path(booking), class: "btn btn-ghost", method: :put %>
        <%= link_to 'reject', booking_reject_path(booking), class: "btn btn-ghost", method: :put %>
        <% end %>
      </div>
    </div>
        <% end %>

  </div>



