
<div class="home-banner">
  <h1 class="title">Art It</h1>
  <h2>An Art Collection at your Tip</h2>
</div>


<br>

  

  <div class="cards">
  
    
      <% @collections.each do |collection| %>
        
        <% if collection.photos.attached? %>

      <div class="card-trip">
        <%= link_to new_favorite_path(collection_id: collection), method: :post, class: "fav-heart" do %>
            <i class="far fa-heart"></i> 
        <% end %>
         <%= cl_image_tag collection.photos[0].key, height: 300, width: 400, crop: :fill %>
        <div class="card-trip-infos">
         <p id="description"><%= link_to collection.title, collection_path(collection)%></p>
          <div>
          <p><%= collection.description %><p>
          </div>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>

    <% else %>

    
      <div class="card-trip">
         <%= link_to new_favorite_path(collection_id: collection), method: :post, class:"fav-heart" do%>
            <i class="far fa-heart"></i> 
        <% end %>
        <img src="https://source.unsplash.com/<%=rand(1400..1600) %>x900/?painting" />
        <div class="card-trip-infos">
        <p id="description"><%= link_to collection.title, collection_path(collection)%></p>
          <div>
          <p><%= collection.description %><p>
          </div>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      <% end %>
     </div>
        <% end %>
    
  </div>

  

