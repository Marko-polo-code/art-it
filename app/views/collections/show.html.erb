
<%= link_to "Home Page", collections_path %>

<div class="card" style="width: 18rem;">
    <div class="card horizontal">
    <h2 class="header"><%= @collection.title %></h2>
      <div class="card-image">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <p><%= @collection.description %></p>
          <p><%= @collection.price %></p>
        </div>
        <div class="card-action">
          <a href="#">This is a link</a>
        </div>
      </div>
    </div>
  </div>

<% @collection.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<h3 class="booking-question">Do you like it? Make a booking</h3>


<div class="card float-right" style="width: 18rem; margin-right:40px">
<%= simple_form_for [ @collection, @booking ], :url => new_collection_booking_path(@collection), :method => :get do |f| %>
  <%= f.input :start_date, as: :date %>
  <%= f.input :end_date, as: :date %>
  <%= f.button :submit %>
    <% if @booking.errors.any? %>
      <div class="errors-container">
      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
  </div>

<% end %>

