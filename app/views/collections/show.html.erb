


<div class="container" style="margin-top: 9rem">

  <%= link_to "Home Page", collections_path %>

    <div class="row">

      <div class="col-md-6">
         <div class="card horizontal">
           <h2 class="header"><%= @collection.title %></h2>
            <div class="card-image">
            </div>
            <div class="card-stacked">
              <div class="card-content">
                <p><%= @collection.description %></p>
                <p><%= @collection.price %></p>
                <% if @average_rating %>
                  <% @average_rating.times do  %>
                    <i class="fas fa-star" style="color: yellow"></i>
                  <% end %>
                <% else %>
                  No ratings yet.
                <% end %>
               </div>
               <div class="card-action">
               </div>
              </div>
            </div>
          </div>
        <% @collection.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>


      <div class="col-md-6">
      <h3 class="booking-question">Do you like it? Make a booking</h3>
        <div id='flat-booking-dates' data-unavailable="<%= @collection.unavailable_dates.to_json %>">
          <% if current_user && current_user.id != @collection.user_id  %>
          <%= simple_form_for [ @collection, @booking ] do |f| %>
              <%= f.input :start_date, as: :string, type: :text %>
              <%= f.input :end_date, as: :string, type: :text %>
              <%= f.submit "Book", class: "btn btn-primary" %>
            <% end %>
          <% end %>
        </div>
      </div>

      </div>


    <div id="reviews">
      <% if @collection.reviews.blank? %>
        Be the first to leave a review for <%= @collection.title %>
      <% else %>
        <% @collection.reviews.each do |review| %>
          <div class="card-product">
            <img src="https://iupac.org/wp-content/uploads/2018/05/default-avatar.png" />
            <div class="card-product-infos">
              <h2><%= review.title %></h2>
                <p><%= review.content %></p>
                <% review.rating.times do  %>
                <i class="fas fa-star" style="color: yellow"></i>
                <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>



  </div>
</div>



